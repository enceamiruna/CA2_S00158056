@model CA2_S00158056.Models.Movie

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bg-primary">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">@Html.DisplayFor(model => model.movieName)</h4>
        </div>
        <div class="modal-body">
            <fieldset>
                <div class="display-field">
                    @if (Model.screenName.Count == 0)
                    {
                        <p>There is no cast assigned to this movie</p>
                    }
                    else
                    {
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>Actor Name</th>
                                <th>Screen Name</th>
                                <th>Edit Cast</th>
                                <th>Remove Cast</th>
                            </tr>


                            @foreach (var item in Model.screenName)
                            {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.actor.actorName)</td>
                                    <td> @Html.TextBoxFor(modelItem => item.screenName, new { id = "in" + item.actorID })</td>
                                    <td><span class="btn btn-primary" onclick="EditCast('@item.movieID','@item.actorID')">Edit Cast</span></td>
                                    <td> @Html.ActionLink("RemoveCast", "RemoveCast", new { id = item.movieID, id2 = item.actorID }, new { @class = "btn btn-danger" })</td>
                                </tr>
                            }
                        </table>
                    }
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
